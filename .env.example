# ============================================
# Jellyfin Arr Stack - Environment Configuration
# ============================================

# === IGPU SETUP (CRITICAL) ===
# Check your render group ID on host:
#   getent group render | cut -d: -f3
# If different from 107, update group_add values in compose.yml (jellyfin & tdarr)
RENDER_GROUP_ID=107

# === DOMAINS & PORTS ===
JELLYFIN_DOMAIN=jellyfin.example.com
JELLYFIN_PORT=8096

HOMEPAGE_DOMAIN=dashboard.example.com
HOMEPAGE_PORT=3000

# === CLOUDFLARE TUNNEL ===
# Get token from: cloudflared tunnel token jellyfin-dashboard
CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token-here

# === MEDIA PATHS ===
# All mounted as /media inside containers for hardlink support
MEDIA_ROOT=/media
CONTAINER_ROOT=/containers

# === ARR SERVICES PORTS ===
PROWLARR_PORT=9696
RADARR_PORT=7878
SONARR_PORT=8989
LIDARR_PORT=8686
BAZARR_PORT=6767
JELLYSEERR_PORT=5055

# === QBITTORRENT ===
QBITTORRENT_PORT=8080
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=change-me-strong-password

# === VPN (for qBittorrent) ===
VPN_SERVICE_PROVIDER=protonvpn
VPN_TYPE=openvpn
VPN_USERNAME=username
VPN_PASSWORD=password
VPN_SERVER_COUNTRIES=Netherlands

# === TDARR ===
TDARR_WEB_PORT=8265
TDARR_SERVER_PORT=8266
TDARR_ADMIN_USERNAME=admin
TDARR_ADMIN_PASSWORD=password

# === SYSTEM ===
# UID/GID for container user (usually 1000 for first non-root user)
PUID=1000
PGID=1000
TZ=Europe/Amsterdam
